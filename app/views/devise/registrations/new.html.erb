<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    ユーザー名<br/>
    <%= f.text_field :user_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    氏名<br/>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    フリガナ<br/>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    メールアドレス<br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    パスワード<br/>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    パスワード確認<br/>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    郵便番号(ハイフンなし)<br/>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>

  <div class="field">
    都道府県<br/>
    <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture" %>
  </div>

  <div class="field">
    市区町村<br/>
    <%= f.text_field :city, autofocus: true, autocomplete: "city" %>
  </div>

  <div class="field">
  　番地<br/>
    <%= f.text_field :house_number, autofocus: true, autocomplete: "house_number" %>
  </div>

  <div class="field">
    マンション・ビル名<br/>
    <%= f.text_field :other, autofocus: true, autocomplete: "other" %>
  </div>

  <div class="field">
  電話番号（ハイフンなし）<br/>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
