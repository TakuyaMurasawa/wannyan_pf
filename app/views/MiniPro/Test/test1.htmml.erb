class Main {

	public static void main(String[] args) {

		//【問題】「憲法」「法律」「条例」のうち、どれが選択されたかによって条件分岐させて
		//文字列を比較して表示する説明を切り替えましょう。

		//表示する説明を宣言します。
		//今回は"条例"が選択された場合を考えます。
		String law = "条例";

		//if文で場合分けをします。
		//分岐条件の一つ目、「憲法」が選択されていた場合
		//文字列lawの値と"憲法"という文字列が同じか比較します。
		//文字列の比較には"=="ではなくequalsメソッドを利用します。
		if(law.equals("憲法")) {
			//憲法についての説明を出力します。
			System.out.println("国家権力を制限し、国民の権利や自由を守るもの。");

		//★分岐条件の二つ目、「法律」が選択されていた場合の条件をelse ifを使って記述してみましょう。★
		}else if(law.equals("法律")){
			//法律についての説明を出力します。
			System.out.println("国家による国民に対するルール。憲法に反することはできない。");

		//★分岐条件の三つ目、「条例」が選択されていた場合の条件をelse ifを使って記述してみましょう。★
		}else if(law.equals("条例")){
			//条例についての説明を出力します。
			System.out.println("都道府県や市区町村などの地方自治体が制定する法。法律や憲法に反することはできない。");
		}
		//実行して確認したら、変数lawに「憲法」「法律」を設定して再度実行してみましょう。
	}
}

