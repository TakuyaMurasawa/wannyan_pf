<div class="row">
    <div class="width">
　    <% @animals.each do |animal| %>
　      <div class="height">
          <p class="img_wrap">
            <%= link_to animal_path(animal) do %>
              <%= attachment_image_tag animal, :image, :fill, 250, 250, format: 'jpeg', class: "img" %>
            <% end %>
          </p>
          <p>
            <%= animal.title %>
          </p>
          <p>
            <%= animal.prefecture %>
          </p>
        </div>
　    <% end %>
　    <div class="center-block row">
        <%= paginate @animals %>
      </div>
    </div>
  </div>
</div>
