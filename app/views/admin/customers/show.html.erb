<div class="container">
  <div class="row">
    <div class="col-lg-11 offset-lg-1 ">
　　<h2>顧客画面</h2>
      <span class="title">登録情報<span>
      <span class="customer_edit"><%= link_to "編集する", edit_customer_path,class: "btn btn-sm btn-success" %></span>
      <table border="1" style="border-collapse: collapse" class="customer_show_table">
        <tr>
          <th class="customer_show_th">ユーザー名</th>
          <th class="customer_show_th_content"><%= @customer.user_name %></th>
        </tr>
        <tr>
          <th class="customer_show_th">氏名</th>
          <th class="customer_show_th_content"><%= @customer.last_name + @customer.first_name %></th>
        </tr>
        <tr>
          <th class="customer_show_th">フリガナ</th>
          <th class="customer_show_th_content"><%= @customer.last_name_kana + @customer.first_name_kana %></th>
        </tr>
        <tr>
          <th class="customer_show_th" >郵便番号</th>
          <th class="customer_show_th_content">〒<%= @customer.postcode%></th>
        </tr>
        <tr>
          <th class="customer_show_th">住所</th>
          <th class="customer_show_th_content"><%= @customer.prefecture + @customer.city + @customer.house_number + @customer.other%></th>
        </tr>
        <tr>
          <th class="customer_show_th">電話番号</th>
          <th class="customer_show_th_content"><%= @customer.phone_number%></th>
        </tr>
        <tr>
          <th class="customer_show_th">メールアドレス</th>
          <th class="customer_show_th_content"><%= @customer.email%></th>
        </tr>
    </table>
    <div class="link">
      <h3>募集一覧</h3>
        <div class="row">
          <div class="width">
            <% @customer.animals.each do |animal| %>
              <div class="customer-height">
                <p class="img_wrap">
                  <%= link_to animal_path(animal) do %>
                  <%= attachment_image_tag animal, :image, :fill, 150, 150, format: 'jpeg', class: "img" %>
                  <% end %>
                </p>
                <p>
                  <%= animal.title %>
                </p>
                <p>
                  <%= animal.prefecture %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
 </div>
</div>