<div class="container">
  <div class="row my-3">
    <div class="col-lg-12 i-show-empty">
      <h4 class="pr-3 pt-3">犬猫登録</h4>
      <%= form_with model: @animal, local:true do |f| %>
      <table class="customer_table">
          <tr>
            <th class="customer_edit_th">写真</th>
            <td><%= f.file_field :images, multiple: true %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">タイトル</th>
            <td><%= f.text_field :image %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">種類</th>
            <%= f.radio_button :tipe, "犬" %>犬

            <%= f.radio_button :tipe, "猫" %>猫

            <%= f.radio_button :tipe, "両方" %>両方

          </tr>
           <tr>
            <th class="customer_edit_th">性別</th>
            <%= f.radio_button :sex, "オス" %>オス

            <%= f.radio_button :sex, "メス" %>メス

            <%= f.radio_button :sex, "両方" %>両方
          </tr>
          <tr>
            <th class="customer_edit_th">お誕生日</th>
            <td><%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">所在地(都道府県)</th>
            <td><%= f.text_field :prefecture %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">ワクチン</th>
            <%= f.radio_button :vaccine, "済" %>オス

            <%= f.radio_button :vaccine, "未" %>メス

            <%= f.radio_button :vaccine, "不明" %>両方
          </tr>
          <tr>
          　<th class="customer_edit_th">ワクチン接種日</th>
            <td><%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1999, 1, 1) %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">去勢手術</th>
            <%= f.radio_button :castrate, "済" %>済

            <%= f.radio_button :castrate, "未" %>未

            <%= f.radio_button :castrate, "不明" %>不明
          </tr>
          <tr>
            <th class="customer_edit_th">プロフィール</th>
            <td><%= f.text_area :profile %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">その他</th>
            <td><%= f.text_area :other %></td>
          </tr>
        </table>
        <div></div>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
