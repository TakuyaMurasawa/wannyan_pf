<div class="container">
  <div class="row">
    <div class="col-lg-12 i-show-empty">
      <h4 class="pr-3 pt-3">募集登録</h4>
      <%= form_with model: @animal, local:true do |f| %>
      <table class="customer_table">
          <tr>
            <th class="customer_edit_th">写真</th>
            <td><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">タイトル</th>
            <td><%= f.text_field :title %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">種類</th>
            <td><%= f.radio_button :tipe, :dog %>犬

            <%= f.radio_button :tipe, :cat %>猫</td>
          </tr>
           <tr>
            <th class="customer_edit_th">性別</th>
            <td><%= f.radio_button :sex, :male %>オス

            <%= f.radio_button :sex, :female %>メス

            <%= f.radio_button :sex, :bothsides %>両方</td>
          </tr>
          <tr>
            <th class="customer_edit_th">お誕生日</th>
            <td><%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, default: Date.new(1989, 1, 1) %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">所在地(都道府県)</th>
            <td><%= f.text_field :prefecture %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">ワクチン</th>
            <td><%= f.radio_button :vaccine, :already %>済

            <%= f.radio_button :vaccine, :notyet %>未

            <%= f.radio_button :vaccine, :unknown %>不明</td>
          </tr>
          <tr>
          　<th class="customer_edit_th">ワクチン接種日</th>
            <td><%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, default: Date.new(1999, 1, 1) %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">去勢手術</th>
            <td><%= f.radio_button :castrate, :sumi %>済

            <%= f.radio_button :castrate, :mada %>未

            <%= f.radio_button :castrate, :humei %>不明</td>
          </tr>
          <tr>
            <th class="customer_edit_th">プロフィール</th>
            <td><%= f.text_area :profile %></td>
          </tr>
          <tr>
            <th class="customer_edit_th">その他</th>
            <td><%= f.text_area :other %></td>
          </tr>
        </table>
        <div></div>
        <%= f.submit "募集する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
